<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <TabPane prefHeight="558.0" prefWidth="691.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Untitled Tab 1">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="529.0" prefWidth="963.0">
                     <children>
                        <ImageView fx:id="originalImageView" fitHeight="216.0" fitWidth="216.0" layoutX="41.0" layoutY="38.0" pickOnBounds="true" preserveRatio="true" />
                        <Label layoutX="102.0" layoutY="14.0" text="Original Image" />
                        <ImageView fx:id="blackWhiteImageView" fitHeight="216.0" fitWidth="216.0" layoutX="41.0" layoutY="276.0" pickOnBounds="true" preserveRatio="true" />
