                        <Button fx:id="chooseFileButton" layoutX="363.0" layoutY="38.0" mnemonicParsing="false" onAction="#chooseFile" prefHeight="42.0" prefWidth="103.0" text="Choose File" />
                        <Button fx:id="blackWhiteButton" layoutX="362.0" layoutY="113.0" mnemonicParsing="false" onAction="#displayBlackWhiteImage" prefHeight="49.0" prefWidth="105.0" text="Convert Image" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Untitled Tab 2">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
